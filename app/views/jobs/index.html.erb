
<div class='banner' style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%=image_path("banner_picture.jpg")%>);">

  <div class='banner_content'>
    <div>
      <h1>PorUmMundoMelhor</h1>
      <p>Junte-se</p>
      <%=link_to 'Publique uma causa social', new_job_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>

  <div class='search_holder'>

    <form action="/search" class='main_search'>
      <div class='main_search_inputs'>
        <input type="text" id='main_search_input' name='address' placeholder='Localização'>
        <input type="text" id='second_search_input' name='title' placeholder='Assunto'>
        <select name='category' id='third_search_input'>
          <option value="" selected>Selecione uma categoria</option>
          <option value="Educação">Educação</option>
          <option value="Crianças e jovens">Crianças e jovens</option>
          <option value="Defesa de direitos">Defesa de direitos</option>
          <option value="Meio Ambiente">Meio Ambiente</option>
          <option value="Pessoas com Deficiência">Pessoas com Deficiência</option>
          <option value="Proteção Animal">Proteção Animal</option>
          <option value="Saúde">Saúde</option>
          <option value="Combate à Pobreza">Combate à Pobreza</option>
        </select>
      </div>
      <button type='submit' class='btn btn-success btn-lg'>Procurar</button>
    </form>

    <%#= simple_form_for :search, url: jobs_path , :method => :get, html: {class: "main_search, form-inline"} do |f|%>
      <%#= f.input :category, collection: ["Educação","Crianças e jovens", "Defesa de direitos", "Meio Ambiente", "Pessoas com Deficiência", "Proteção Animal", "Saúde", "Combate à Pobreza"], label: false %>
      <%#= f.input :title, placeholder: "Procure pelo job", label: false %>
      <%#= f.button :submit, 'Search', class: "btn btn-primary" %>
    <%# end %>
  </div>
</div>


<div class="wrapper-cards">
  <div class="container">
    <div class="row">
      <% @jobs.each do |job| %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card">
          <div class="card-picture">
            <% if job.picture != [] %>
              <% first_image = job.picture.sample %>
              <%= cl_image_tag first_image.path, width: 345, height: 150 %>
            <% else %>
              <div class="no-img"><i class="fa fa-image"></i></div>
            <% end %>
            <span class="gradient"> </span>
            <div class="card-category text-right">
              <%= job.category %>
            </div>
            <div class="card-title">
              <h2> <%= job.title %> </h2>
            </div>
          </div>
          <div class="card-desc text-center">
            <% if job.remote == true %>
              <p><i class="fa fa-wifi"></i> Remoto</p>
            <% end %>
            <p>
              <%= job.short_description %>
            </p>
          </div>
          <%=link_to job.title, job_path(job), class: "card-link" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
