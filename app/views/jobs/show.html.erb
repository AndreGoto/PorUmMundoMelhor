<div class="container">

  <div class="row">
    <% if @job.picture %>
      <%= image_tag(@job.picture) %>
    <% else %>
      <%=image_tag("https://unsplash.it/400/300") %>
    <% end %>
  </div>

  <div class="row">
    <h3>Postado por: <%= @job.user.first_name %> <%= @job.user.last_name %></h3>
  </div>

  <div class="row">
    <h3>Título: <%= @job.title %></h3>
  </div>

  <div class="row">
    <h3>Categoria: <%= @job.category %></h3>
  </div>

  <div class="row">
    <h3>Descrição: <%= @job.description %></h3>
  </div>

  <% content_for(:after_js) do %>
    <%= javascript_tag do %>
      $(document).ready(function() {
        var coord = <%= raw @job_coordinates.to_json %>;
        alert('Job coordinates are ' + coord.lat + ', ' + coord.lng);
      });
    <% end %>
  <% end %>
</div>
