<div class="image-wrapper">
  <% if @job.picture != [] %>
  <div class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% @job.picture.each do |pic| %>
      <% if pic.id == 1 %>
        <div class="item active">
      <% else %>
        <div class="item">
      <% end %>
          <%= cl_image_tag pic.path, width: 300, height: 200 %>
        </div>
      <% end %>
    </div>
    <!-- carousel-inner -->
  </div>
  <% else %>
    <%=image_tag("https://unsplash.it/400/300") %>
  <% end %>
</div>

<div class="container">

  <div class="row">

  </div>

  <div class="row">
    <h3>Postado por: <%= @job.user.first_name %> <%= @job.user.last_name %></h3>
  </div>

  <div class="row">
    <h3>Título: <%= @job.title %></h3>
  </div>

  <div class="row">
    <h3>Categoria: <%= @job.category %></h3>
  </div>

  <div class="row">
    <h3>Descrição: <%= @job.description %></h3>
  </div>
</div>
