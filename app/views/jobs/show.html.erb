<div class="container">

  <div class="row">
    <%= image_tag(@job.picture) %>
  </div>

  <div class="row">
    <h3>Postado por: <%= @job.user.name %></h3>
  </div>

  <div class="row">
    <h3>Título: <%= @job.title %></h3>
  </div>

  <div class="row">
    <h3>Categoria: <%= @job.category %></h3>
  </div>

  <div class="row">
    <h3>Descrição: <%= @job.description %></h3>
  </div>
</div>
