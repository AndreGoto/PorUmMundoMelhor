<%= simple_form_for(@job) do |f| %>
  <%= f.input :title, placeholder: "Título" %>
  <%= f.input :address, placeholder: "Endereço" %>
  <%= f.input :short_description, placeholder: "Breve descrição" %>
  <%= f.input :description, placeholder: "Descrição detalhada" %>
  <%= f.input :date, placeholder: "Data de início" %>
  <%= f.input :remote, as: :boolean, checked_value: true, unchecked_value: false %>
  <% unless current_page?(new_job_path) %>
    <%= f.input :finish, as: :boolean, checked_value: true, unchecked_value: false %>
  <% end %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.input :picture, as: :attachinary %>
  <%= f.button :submit, class: "btn btn-primary"  %>
<% end %>
